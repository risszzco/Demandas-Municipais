        <!DOCTYPE html>
        <html>
          <head>
            <title>App de Demandas Municipais</title>
            <meta name="viewport" content="width=device-width,initial-scale=1">
            <%= csrf_meta_tags %>
            <%= csp_meta_tag %>
            <%= stylesheet_link_tag "tailwind", "inter-font", "data-turbo-track": "reload" %>
            <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
            <%= javascript_importmap_tags %>
          </head>
          <body class="bg-gray-100 flex flex-col min-h-screen">
            <header class="bg-blue-600 text-white p-4 shadow-md">
              <div class="container mx-auto text-center">
                <h1 class="text-2xl font-bold">Demandas do Munícipe</h1>
              </div>
            </header>
            <main class="container mx-auto p-4 flex-grow">
              <% if notice.present? %>
                <p class="py-2 px-3 bg-green-50 text-green-700 rounded-lg shadow-sm mb-4"><%= notice %></p>
              <% end %>
              <% if alert.present? %>
                <p class="py-2 px-3 bg-red-50 text-red-700 rounded-lg shadow-sm mb-4"><%= alert %></p>
              <% end %>
              <%= yield %>
            </main>
            <footer class="bg-blue-600 text-white p-4 mt-auto text-center text-sm shadow-inner">
              <p>&copy; <%= Time.now.year %> Gestão Pública Municipal. Todos os direitos reservados.</p>
            </footer>
          </body>
        </html>
        
